<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:layout_height="match_parent"
	tools:context=".Activities.Paciente.Activity_Menu_Paciente">
	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar_pacientes"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="@color/grayBackground"
		app:layout_scrollFlags="scroll|enterAlways"
		app:popupTheme="@style/AppTheme.PopupOverlay"
		tools:ignore="MissingConstraints">
		<TextView
			android:id="@+id/title_preguntas"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Titulo del Toolbar"
			android:textStyle="bold"
			android:textSize="15sp"
			android:layout_gravity="center" />
	</androidx.appcompat.widget.Toolbar>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="120dp"
			android:padding="@dimen/common_15_dp"
			android:background="@drawable/fondo"
			android:orientation="horizontal">
			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="90dp"
				android:gravity="center"
				android:layout_height="wrap_content">
				<ImageView
					android:id="@+id/imgPaciente"
					android:src="@drawable/ic_user"
					android:layout_width="90dp"
					android:layout_height="90dp"
					tools:ignore="MissingConstraints">
				</ImageView>
				<ImageView
					android:padding="@dimen/common_5_dp"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:background="@drawable/withe_circle_border"
					tools:ignore="MissingConstraints" />
				<Button
					android:id="@+id/btnUpdateImage"
					android:drawableTint="@color/green"
					android:background="@color/transparente"
					android:drawableLeft="@drawable/ic_update_icon"
					android:layout_width="@dimen/common_25_dp"
					android:layout_height="@dimen/common_25_dp"
					android:gravity="right"
					tools:ignore="MissingConstraints" />
			</androidx.constraintlayout.widget.ConstraintLayout>
			<LinearLayout
				android:layout_marginLeft="@dimen/common_15_dp"
				android:layout_width="match_parent"
				android:layout_height="90dp"
				android:orientation="vertical">
				<TextView
					android:id="@+id/txtNombre"
					android:layout_width="match_parent"
					android:layout_height="22.5dp"
					android:text="Julio Cesar Vazquez Solano"
					android:textColor="@color/white"
					android:textSize="14sp"/>
				<TextView
					android:id="@+id/txtEdad"
					android:layout_width="match_parent"
					android:layout_height="22.5dp"
					android:text="23 aÃ±os"
					android:textColor="@color/white"
					android:textSize="13sp"/>
				<TextView
					android:id="@+id/txtCorreo"
					android:layout_width="match_parent"
					android:layout_height="22.5dp"
					android:text="juliocesarvazquezsolano@gmail.com"
					android:textColor="@color/white"
					android:textSize="13sp"/>
				<TextView
					android:id="@+id/txtTelefono"
					android:layout_width="match_parent"
					android:layout_height="22.5dp"
					android:text="2222129036"
					android:textColor="@color/white"
					android:textSize="13sp"/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:orientation="horizontal">
			<Button
				android:textColor="@color/primaryBlueColor"
				android:textAllCaps="false"
				android:id="@+id/btnArchivo"
				android:background="@color/grayBackground"
				android:layout_width="0dp"
				android:layout_height="@dimen/common_30_dp"
				android:layout_weight="0.25"
				android:text="Archivo"/>
			<Button
				android:textAllCaps="false"
				android:id="@+id/btnNotas"
				android:background="@color/white"
				android:layout_width="0dp"
				android:layout_height="@dimen/common_30_dp"
				android:layout_weight="0.25"
				android:text="Notas"/>
			<Button
				android:textAllCaps="false"
				android:id="@+id/btnSignos"
				android:background="@color/white"
				android:layout_width="0dp"
				android:layout_height="@dimen/common_30_dp"
				android:layout_weight="0.25"
				android:text="Signos"/>
			<Button
				android:textAllCaps="false"
				android:id="@+id/btnEstudios"
				android:background="@color/white"
				android:layout_width="0dp"
				android:layout_height="@dimen/common_30_dp"
				android:layout_weight="0.25"
				android:text="Estudios"/>
		</LinearLayout>
        <fragment android:name="com.juliovazquez.hsclinic.Activities.Paciente.Fragment_Archivo"
            android:id="@+id/fragmentArchivo"
            android:background="@color/grayBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment android:name="com.juliovazquez.hsclinic.Activities.Paciente.Fragment_Notas"
            android:id="@+id/fragmentNotas"
            android:background="@color/grayBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment android:name="com.juliovazquez.hsclinic.Activities.Paciente.Fragment_Signos"
            android:id="@+id/fragmentSignos"
            android:layout_width="match_parent"
            android:background="@color/grayBackground"
            android:layout_height="match_parent" />

        <fragment android:name="com.juliovazquez.hsclinic.Activities.Paciente.Fragment_Estudios"
            android:id="@+id/fragmentEstudios"
            android:layout_width="match_parent"
            android:background="@color/grayBackground"
            android:layout_height="match_parent" />
	</LinearLayout>
</LinearLayout>