<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:padding="@dimen/common_10_dp"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="HealtSoft"
            android:gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/common_5_dp"
        android:background="@color/backgroundMenu"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_header_imageView2"
                android:layout_width="@dimen/common_30_dp"
                android:layout_marginLeft="5dp"
                android:layout_height="@dimen/common_30_dp"
                android:tint="@color/white"
                android:padding="@dimen/common_5_dp"
                android:src="@drawable/ic_user"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/nav_header_imageView"
                android:layout_width="@dimen/common_30_dp"
                android:layout_marginLeft="5dp"
                android:layout_height="@dimen/common_30_dp"
                android:tint="@color/white"
                android:padding="@dimen/common_5_dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/fit_circle_border"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/nav_header_textView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_30_dp"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:textSize="15sp"
            android:text="Chike Mgbemena"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>