<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="@dimen/common_15_dp"
    android:id="@+id/globalView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="@dimen/common_5_dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="@dimen/common_25_dp"
                android:layout_height="@dimen/common_25_dp"
                android:padding="3dp"
                android:src="@drawable/ic_signos_icon" />
            <Button
                android:background="@color/white"
                android:id="@+id/btnSignos"
                android:layout_width="match_parent"
                android:drawableRight="@drawable/ic_editar"
                android:textAllCaps="false"
                android:layout_height="@dimen/common_25_dp"
                android:layout_marginLeft="@dimen/common_5_dp"
                android:text="Geriatría" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/common_5_dp"
            android:id="@+id/brHistorias"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="1dp"
                android:text="Frecuencia respiratoria: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="1dp"
                android:textStyle="bold"
                android:text="45 RPM"
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="1dp"
                android:text="Presión sanguínea: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="1dp"
                android:text="120/80"
                android:id="@+id/txt2"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="1dp"
                android:text="Temperatura: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="1dp"
                android:text="37.5°C"
                android:id="@+id/txt3"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="1dp"
                android:text="Saturación de O2: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="1dp"
                android:text="87%"
                android:textStyle="bold"
                android:id="@+id/txt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="1dp"
                android:text="Pulso: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="66 LPM"
                android:textStyle="bold"
                android:id="@+id/txt5"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>