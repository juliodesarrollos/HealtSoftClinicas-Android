<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Graficas.Fragment_Dashboard">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_10_dp"
        android:layout_marginRight="@dimen/common_10_dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/common_0_dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/common_10_dp"
                android:layout_weight="0.5"
                android:background="@drawable/corner_radius_shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCitas1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/common_10_dp"
                    android:layout_weight="0.33"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.33"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/common_5_dp"
                    android:text="Citas registradas"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_15_dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:textSize="@dimen/common_10_dp"
                    android:layout_height="25dp"
                    android:background="@drawable/botton_radius_shape"
                    android:drawableRight="@drawable/ic_menu_mas_info_icon"
                    android:drawableTint="@color/white"
                    android:text="Más información"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/common_0_dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/common_10_dp"
                android:layout_weight="0.5"
                android:backgroundTint="@color/green"
                android:background="@drawable/corner_radius_shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCitas2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/common_10_dp"
                    android:layout_weight="0.33"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.33"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/common_5_dp"
                    android:text="Citas concluidas"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_15_dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="@dimen/common_10_dp"
                    android:backgroundTint="@color/darkGreen"
                    android:background="@drawable/botton_radius_shape"
                    android:drawableRight="@drawable/ic_menu_mas_info_icon"
                    android:drawableTint="@color/white"
                    android:text="Más información"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_margin="@dimen/common_10_dp"
                android:orientation="vertical"
                android:backgroundTint="@color/yellow"
                android:background="@drawable/corner_radius_shape"
                android:layout_width="@dimen/common_0_dp"
                android:layout_height="100dp"
                android:layout_weight="0.5">
                <TextView
                    android:id="@+id/txtPacientesD"
                    android:layout_marginTop="@dimen/common_10_dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.33"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="0"
                    android:gravity="center_horizontal" />
                <TextView
                    android:paddingTop="@dimen/common_5_dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.33"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_15_dp"
                    android:textAlignment="center"
                    android:text="Nuevos pacientes"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
                <Button
                    android:backgroundTint="@color/darkYellow"
                    android:textColor="@color/white"
                    android:drawableTint="@color/white"
                    android:textAllCaps="false"
                    android:textSize="@dimen/common_10_dp"
                    android:layout_width="match_parent"
                    android:drawableRight="@drawable/ic_menu_mas_info_icon"
                    android:background="@drawable/botton_radius_shape"
                    android:layout_height="25dp"
                    android:text="Más información"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="@dimen/common_10_dp"
                android:orientation="vertical"
                android:backgroundTint="@color/red"
                android:background="@drawable/corner_radius_shape"
                android:layout_width="@dimen/common_0_dp"
                android:layout_height="100dp"
                android:layout_weight="0.5">
                <TextView
                    android:id="@+id/txtIngresos"
                    android:layout_marginTop="@dimen/common_10_dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.33"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="$0.00"
                    android:gravity="center_horizontal" />
                <TextView
                    android:paddingTop="@dimen/common_5_dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.33"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_15_dp"
                    android:textAlignment="center"
                    android:text="Ingresos"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
                <Button
                    android:textColor="@color/white"
                    android:backgroundTint="@color/darkRed"
                    android:drawableTint="@color/white"
                    android:textAllCaps="false"
                    android:textSize="@dimen/common_10_dp"
                    android:layout_width="match_parent"
                    android:drawableRight="@drawable/ic_menu_mas_info_icon"
                    android:background="@drawable/botton_radius_shape"
                    android:layout_height="25dp"
                    android:text="Más información"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:layout_margin="@dimen/common_20_dp"
        android:id="@+id/chartDashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>